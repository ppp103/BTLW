@model IEnumerable<QuanLyBanSach.Models.DonHang>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Danh Sách Đơn Hàng</h1>

<p>
    <a class="btn btn-sm btn-outline-info" asp-action="Create">Thêm mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Mã Đơn
            </th>
            <th>
               Địa Chỉ
            </th>
            <th>
               Ngày Đặt
            </th>
            <th>
                Ngày Giao
            </th>
            <th>
              Tổng Tiền
            </th>
           <th>
               Tên Khách Hàng
            </th>
            <th>
                Trạng Thái 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaDonHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaDiemGh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayGiao)
            </td>
            <td>
                @item.TongTien.Value.ToString("#,##0")
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.TenKh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThaiDh)
            </td>
            
            <td>
                    <a class="btn btn-info btn-tone m-r-5"  asp-action="Edit" asp-route-id="@item.MaDonHang">Sửa</a>
                    <a class="btn btn-primary btn-tone m-r-5"  asp-action="Details" asp-route-id="@item.MaDonHang">Chi tiết</a>
                    <a class="btn btn-secondary btn-tone m-r-5" asp-action="Delete" asp-route-id="@item.MaDonHang">Xóa</a>
                    <a class="btn btn-secondary btn-tone m-r-5" asp-controller="ChiTietDonHangs" asp-action="Create" asp-route-id="@item.MaDonHang">Them</a>
            </td>
        </tr>
    }
    </tbody>
</table>
